
.container{
  display: flex;
  flex: 1;
  flex-direction: column;
  box-sizing: border-box;
}
.container .swiper{
  height: 400rpx;
}
.swiper .swiper-item{
  height: 400rpx;
}
.swiper-item .slide-image{
  width: 100%;
  height: 400rpx;
}
.aside{
  display: flex;
  background: #F0FFFF;
  margin: 40rpx;
  padding: 40rpx;
  border: 1px solid black;
}
.aside .text{
  flex: 1;
}
.aside .text-img{
  width: 40rpx;
  height: 40rpx;
}