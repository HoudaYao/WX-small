.container{
  width: 100%;
  height: 100%;
  background:#F5F5F5;
}
.container .mine{
  width: 100%;
  height: 100rpx;
  display: flex;
  margin-left: 8rpx;
}
.mine .info{
  height: 100rpx;
  display: flex;
  flex-direction: column;
  margin: 10rpx;
  padding: 34rpx;
  font-size: 12px;
  align-items: center;
  background: #fff;
}
.mine .img{
  width: 70rpx;
  margin-bottom: 5rpx;
  height: 70rpx;
}
.container .inform{
  width: 100%;
  display: flex;
  font-size: 12px;
  flex-direction: column;
  margin-top: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.inform .state{
  width: 100%;
  background: #fff;
  height: 50rpx;
  margin-top: 14rpx;
  padding: 6rpx;
}
.state .state-img,.state-img-in{
  width: 20rpx;
  height: 20rpx;
}

.state-img-in{
  float: right;
  margin-top: 17rpx;
  margin-right:20rpx ;
}